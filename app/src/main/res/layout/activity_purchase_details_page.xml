<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.BoughtDetailsPage"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativePurchaseDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_toolbar_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/textview15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageView29"
            android:layout_alignTop="@id/imageView29"
            android:layout_alignEnd="@id/imageView29"
            android:layout_alignBottom="@id/imageView29"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:text="Purchase Details"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_bold"
        android:text="Flight Details"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvBoughtDateDetail"
        app:layout_constraintTop_toBottomOf="@id/relativePurchaseDetail"/>

    <TextView
        android:id="@+id/tvBoughtDateDetail"
        android:text="Date"
        android:fontFamily="@font/gilroy_semibold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView17"
        app:layout_constraintBottom_toTopOf="@id/cardBought"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/tvBoughtDateDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBoughtFlightCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/gilroy_bold"
                android:text="tvFlightCompany"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBoughtFlightDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="depart"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/space3"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvBoughtFlightTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_light"
                android:text="fligt time"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/tvBoughtFlightDestinationTime"
                app:layout_constraintStart_toEndOf="@+id/tvBoughtFlightDepartureTime"
                app:layout_constraintTop_toTopOf="@+id/tvBoughtFlightDepartureTime" />

            <TextView
                android:id="@+id/tvBoughtFlightDestinationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="dest"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/space3"
                app:layout_constraintTop_toTopOf="@+id/tvBoughtFlightTime"
                app:layout_constraintEnd_toStartOf="@id/guideline3"
                app:layout_constraintStart_toEndOf="@id/tvBoughtFlightTime" />

            <TextView
                android:id="@+id/tvBoughtFlightCodeDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="codeDest"
                android:textSize="16dp"
                android:fontFamily="@font/gilroy_extra_bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView31"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBoughtFlightCodeDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="codeDepart"
                android:textSize="16dp"
                android:fontFamily="@font/gilroy_extra_bold"
                app:layout_constraintBottom_toTopOf="@+id/space3"
                app:layout_constraintEnd_toEndOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintStart_toStartOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintTop_toBottomOf="@+id/imageView31" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/view_dash_vertical"
                app:layout_constraintBottom_toTopOf="@+id/tvBoughtFlightCodeDeparture"
                app:layout_constraintEnd_toEndOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintStart_toStartOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintTop_toBottomOf="@+id/tvBoughtFlightCodeDestination" />

            <View
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toTopOf="@id/imageView32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBoughtFlightCodeDeparture" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_bag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space3" />

            <TextView
                android:id="@+id/tvBoughtFlightBaggageCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="tvKilogram"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView32"
                app:layout_constraintTop_toBottomOf="@id/space3" />

            <ImageView
                android:id="@+id/ImageView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_delay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBoughtFlightBaggageCap"
                app:layout_constraintTop_toBottomOf="@id/space3" />

            <TextView
                android:id="@+id/tvBoughtFlightDelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="tvDelay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ImageView33"
                app:layout_constraintTop_toBottomOf="@id/space3" />

            <ImageView
                android:id="@+id/ImageView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_money"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBoughtFlightDelay"
                app:layout_constraintTop_toBottomOf="@id/space3" />

            <TextView
                android:id="@+id/tvBoughtFlightPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="tvPrice"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ImageView38"
                app:layout_constraintTop_toBottomOf="@id/space3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="116dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_bold"
        android:text="Bought with"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardBought"
        app:layout_constraintBottom_toTopOf="@id/cardCredit"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView18">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImageView34"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/chip"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvBoughtCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_light"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvBoughtCardNumber"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kart numarası"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/tvBoughtCardNumber"
                app:layout_constraintBottom_toTopOf="@id/tvBoughtCardNumber"/>

            <TextView
                android:id="@+id/tvBoughtCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvBoughtCardName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/tvBoughtCardValidDate"
                app:layout_constraintBottom_toTopOf="@id/tvBoughtCardValidDate"/>

            <TextView
                android:id="@+id/tvBoughtCardValidDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/tvBoughtCardNumber"
                app:layout_constraintTop_toTopOf="@id/tvBoughtCardNumber"
                app:layout_constraintBottom_toBottomOf="@id/tvBoughtCardNumber"
                app:layout_constraintEnd_toStartOf="@id/tvBoughtCardCvv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/tvBoughtCardCvv"
                app:layout_constraintBottom_toTopOf="@id/tvBoughtCardCvv"/>

            <TextView
                android:id="@+id/tvBoughtCardCvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginEnd="48dp"
                app:layout_constraintStart_toEndOf="@id/tvBoughtCardValidDate"
                app:layout_constraintTop_toTopOf="@id/tvBoughtCardValidDate"
                app:layout_constraintBottom_toBottomOf="@id/tvBoughtCardValidDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/TextView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/gilroy_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvBoughtCardCvv"/>

            <TextView
                android:id="@+id/tvBoughtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gilroy_medium"
                app:layout_constraintStart_toStartOf="@id/tvBoughtCardCvv"
                app:layout_constraintTop_toBottomOf="@id/TextView19"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>