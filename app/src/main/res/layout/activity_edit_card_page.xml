<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.EditCardPage"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeCardEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_toolbar_background"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/imageView15"
            android:layout_alignTop="@id/imageView15"
            android:layout_alignEnd="@id/imageView15"
            android:layout_alignBottom="@id/imageView15"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:text="Edit Card"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/singleCardItem"
        android:layout_below="@id/relativeCardEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ImageView14"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/chip"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvEditCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_light"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvEditCardNumber"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kart numarası"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/tvEditCardNumber"
                app:layout_constraintBottom_toTopOf="@id/tvEditCardNumber"/>

            <TextView
                android:id="@+id/tvEditCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvEditCardName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/tvEditCardValidDate"
                app:layout_constraintBottom_toTopOf="@id/tvEditCardValidDate"/>

            <TextView
                android:id="@+id/tvEditCardValidDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/tvEditCardNumber"
                app:layout_constraintTop_toTopOf="@id/tvEditCardNumber"
                app:layout_constraintBottom_toBottomOf="@id/tvEditCardNumber"
                app:layout_constraintEnd_toStartOf="@id/tvEditCardCvv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:fontFamily="@font/gilroy_bold"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@id/tvEditCardCvv"
                app:layout_constraintBottom_toTopOf="@id/tvEditCardCvv"/>

            <TextView
                android:id="@+id/tvEditCardCvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginEnd="48dp"
                app:layout_constraintStart_toEndOf="@id/tvEditCardValidDate"
                app:layout_constraintTop_toTopOf="@id/tvEditCardValidDate"
                app:layout_constraintBottom_toBottomOf="@id/tvEditCardValidDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/TextView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/gilroy_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvEditCardCvv"/>

            <TextView
                android:id="@+id/tvEditBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gilroy_medium"
                app:layout_constraintStart_toStartOf="@id/tvEditCardCvv"
                app:layout_constraintTop_toBottomOf="@id/TextView14"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editCardNameLayout"
        android:layout_below="@id/singleCardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Kart adı"
        android:padding="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEditCardName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:clickable="false"
            android:fontFamily="@font/gilroy_semibold" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editCardNumberLayout"
        android:layout_below="@id/editCardNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Kart numarası"
        android:padding="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp" >

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etEditCardNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edit_text"
            android:inputType="number"
            android:ems="10"
            android:clickable="false"
            android:fontFamily="@font/gilroy_semibold"
            app:mask="#### #### #### ####"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editCardValidDateLayout"
        android:layout_below="@id/editCardNumberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Geçerlilik tarihi"
        android:padding="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp" >

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etEditCardValidDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edit_text"
            android:inputType="number"
            android:ems="10"
            android:clickable="false"
            android:fontFamily="@font/gilroy_semibold"
            app:mask="##/##"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editCardCvvLayout"
        android:layout_below="@id/editCardValidDateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/custom_edit_text"
        android:hint="CVV"
        android:padding="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etEditCardCvv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edit_text"
            android:inputType="number"
            android:ems="10"
            android:clickable="false"
            android:fontFamily="@font/gilroy_semibold"
            app:mask="###"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editCardBalanceLayout"
        android:layout_below="@id/editCardCvvLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Eklenecek bakiye miktarı"
        android:padding="0dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp">

        <br.com.sapereaude.maskedEditText.MaskedEditText
            android:id="@+id/etEditCardBalance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:clickable="false"
            android:inputType="number"
            app:mask="######"
            android:fontFamily="@font/gilroy_semibold" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCardEditUpdate"
        android:layout_above="@id/btnCardEditDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/base_blue"
        android:fontFamily="@font/gilroy_semibold"
        android:text="Güncelle"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnCardEditDelete"
        android:layout_above="@id/btnCardEditCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/gilroy_semibold"
        android:text="Kartı sil"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnCardEditCancel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/gilroy_semibold"
        android:text="Iptal"
        android:textAllCaps="false"/>

</RelativeLayout>