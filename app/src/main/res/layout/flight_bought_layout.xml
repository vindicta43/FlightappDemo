<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:gravity="start">

    <TextView
        android:id="@+id/tvBoughtDate"
        android:text="Date"
        android:fontFamily="@font/gilroy_semibold"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBoughtFlightCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/gilroy_bold"
                android:text="tvFlightCompany"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBoughtFlightDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="depart"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/space2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvBoughtFlightTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_light"
                android:text="fligt time"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/tvBoughtFlightDestinationTime"
                app:layout_constraintStart_toEndOf="@+id/tvBoughtFlightDepartureTime"
                app:layout_constraintTop_toTopOf="@+id/tvBoughtFlightDepartureTime" />

            <TextView
                android:id="@+id/tvBoughtFlightDestinationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:text="dest"
                android:textSize="20dp"
                app:layout_constraintBottom_toTopOf="@+id/space2"
                app:layout_constraintTop_toTopOf="@+id/tvBoughtFlightTime"
                app:layout_constraintEnd_toStartOf="@id/guideline3"
                app:layout_constraintStart_toEndOf="@id/tvBoughtFlightTime" />

            <TextView
                android:id="@+id/tvBoughtFlightCodeDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="codeDest"
                android:textSize="16dp"
                android:fontFamily="@font/gilroy_extra_bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBoughtFlightCodeDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="codeDepart"
                android:textSize="16dp"
                android:fontFamily="@font/gilroy_extra_bold"
                app:layout_constraintBottom_toTopOf="@id/space2"
                app:layout_constraintEnd_toEndOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintStart_toStartOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintTop_toBottomOf="@id/imageView25" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/view_dash_vertical"
                app:layout_constraintBottom_toTopOf="@+id/tvBoughtFlightCodeDeparture"
                app:layout_constraintEnd_toEndOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintStart_toStartOf="@id/tvBoughtFlightCodeDestination"
                app:layout_constraintTop_toBottomOf="@+id/tvBoughtFlightCodeDestination" />

            <View
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey"
                app:layout_constraintBottom_toTopOf="@id/imageView26"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBoughtFlightCodeDeparture" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_bag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space2" />

            <TextView
                android:id="@+id/tvBoughtFlightBaggageCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="tvKilogram"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView26"
                app:layout_constraintTop_toBottomOf="@id/space2" />

            <ImageView
                android:id="@+id/ImageView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_delay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvBoughtFlightBaggageCap"
                app:layout_constraintTop_toBottomOf="@id/space2" />

            <TextView
                android:id="@+id/tvBoughtFlightDelay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="tvDelay"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ImageView27"
                app:layout_constraintTop_toBottomOf="@id/space2" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/space2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="116dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>