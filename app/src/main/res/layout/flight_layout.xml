<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="12dp"
    android:gravity="center"
    android:background="@drawable/flight_layout_bg"
    android:backgroundTint="@color/grey">

    <TextView
        android:id="@+id/tvFlightCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fligtCode"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_extra_bold"
        android:textColor="@color/design_default_color_primary"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:id="@+id/tvAirport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="airport"
        android:textSize="12sp"
        android:fontFamily="@font/gilroy_regular"
        android:textColor="@color/design_default_color_primary"/>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:srcCompat="@drawable/view_dash_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="depart"
            android:textSize="12sp"
            android:fontFamily="@font/gilroy_semibold"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/gilroy_semibold"
            android:text="dest"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_marginEnd="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:showDividers="">

        <ImageView
            android:id="@+id/ivMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_maps"
            android:padding="4dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/ivTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_phone"
            android:padding="4dp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>